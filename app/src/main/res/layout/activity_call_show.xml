<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_permission_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/bt_apply_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请权限"
            app:layout_constraintTop_toBottomOf="@id/tv_permission_status"
            />

        <Button
            android:id="@+id/bt_start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动服务"
            app:layout_constraintTop_toBottomOf="@id/bt_apply_permission"
            />

        <Button
            android:id="@+id/bt_stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止服务"
            app:layout_constraintTop_toBottomOf="@id/bt_start_service"
            />

        <Button
            android:id="@+id/bt_set_ringtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置铃声"
            app:layout_constraintTop_toBottomOf="@id/bt_stop_service"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>