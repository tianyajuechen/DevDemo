<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="3dp"
        android:bottom="3dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#eeeeee"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</layer-list>
