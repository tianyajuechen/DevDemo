<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tzy.demo.activity.netrequest.TestRequestActivity"
    >
    
    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tag_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:container_enable_drag="false"
        app:horizontal_interval="15dp"
        app:vertical_interval="15dp"
        app:tag_clickable="true"
        app:tag_corner_radius="2dp"
        app:tag_horizontal_padding="13dp"
        app:tag_vertical_padding="8dp"
        app:tag_text_size="12sp"
        app:tag_max_length="5"/>
    
    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start"
        />
    
    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送请求"
        />

</LinearLayout>
